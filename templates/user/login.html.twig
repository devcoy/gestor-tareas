{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión
{% endblock %}

{% block body %}

	<div>
		<h1>Iniciar sesión</h1>
		<hr/>

    <!-- Mostrar el error del login en caso de exitir -->
		{% if error %}
			<div class="alert alert-danger" role="alert">
				{{ error.message | trans(error.messageData, 'security')}}
			</div>
		{% endif %}

    {% if app.user %}
    {{ dump(app.user) }}
    {% endif %}

		<form action="login" method="post" class="col-12 col-lg-4 my-4">
			<div class="form-group">
				<label for="username">Correo electrónico</label>
				<input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}">
			</div>
			<div class="form-group">
				<label for="password">Contraseña</label>
				<input type="password" class="form-control" id="password" name="_password">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-success" value="Iniciar sesión">
			</div>
		</form>
	</div>
{% endblock %}
